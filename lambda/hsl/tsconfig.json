{
  "compilerOptions": {
    "alwaysStrict" : true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build/",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true      
  }, 
  "include": [
    "src/**/*.ts"
  ]
}